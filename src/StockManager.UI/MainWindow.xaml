<Window x:Class="StockManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockManager.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
  <UniformGrid Margin="280,10,280,10" Columns="1">
    <Button x:Name="AddStock" Content="Add Stock" Height="60"/>
    <Button x:Name="EditStock" Content="Edit Stock" Height="60"/>
    <Button x:Name="SellStock" Content="Sell Stock" Height="60"/>
    <Button x:Name="SearchStock" Content="Search Stock" Height="60"/>
    <Button x:Name="StockReport" Content="Stock Report" Height="60"/>
  </UniformGrid>
</Window>
